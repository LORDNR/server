{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": "./src",

    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
